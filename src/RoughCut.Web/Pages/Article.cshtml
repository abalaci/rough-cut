@page "/articole/exemplu"
@model RoughCut.Web.Pages.ArticleModel
@{
    ViewData[ViewDataKey.Title] = Model.Title;
    IFormatProvider format = new CultureInfo("ro-Ro");
}

<section class="hero is-primary pt-4">
    <div class="hero-body">
        <div class="columns is-centered">
            <div class="column is-three-fifths-desktop">
                <div class="content has-text-centered">
                    <figure class="image">
                        <img src="@Model.ImageUrl" />
                    </figure>
                    <p class="title">@Model.Title</p>
                    <p class="subtitle">De @Model.Author.Name Ã®n @Model.CreatedDate.ToString(format)</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section has-background-light">
    <div class="columns is-centered">
        <div class="column is-three-fifths-desktop">
            <div class="content has-text-justified">
                @Html.Raw(Model.Body)
            </div>
        </div>
    </div>
</section>
