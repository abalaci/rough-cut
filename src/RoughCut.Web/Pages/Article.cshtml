@page "/articole/exemplu"
@model RoughCut.Web.Pages.ArticleModel
@{
    ViewData[ViewDataKey.Title] = Model.Title;
}

<section class="hero is-primary pt-4">
    <div class="hero-body">
        <div class="columns is-centered">
            <div class="column is-three-fifths-desktop">
                <div class="content has-text-centered">
                    <p class="title">@Model.Title</p>
                    <p class="subtitle">De @Model.Author.Name, Ã®n <date on="Model.CreatedDate"></date></p>
                    <figure class="image">
                        <img src="@Model.ImageUrl" />
                    </figure>
                    <p class="subtitle is-uppercase is-underlined">
                        <a asp-page="/Category" asp-route-categoryAlias="@Model.Category.Alias">@Model.Category.Name</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section has-background-light">
    <div class="columns is-centered">
        <div class="column is-three-fifths-desktop">
            <div class="content has-text-justified is-size-5">
                @Html.Raw(Model.Body)
            </div>
        </div>
    </div>
</section>
