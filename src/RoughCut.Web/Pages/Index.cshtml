@page
@model IndexModel
@{
    ViewData[ViewDataKey.Title] = "Acasă";
    IFormatProvider format = new CultureInfo("ro-Ro");
}

<section class="hero is-primary pt-4">
    <div class="hero-body">
        <div class="columns is-centered">
            <div class="column is-three-fifths-desktop">
                <div class="content has-text-centered">
                    <figure class="image">
                        <a asp-page="/Article">
                            <img src="@Model.LatestArticle.ImageUrl" alt="@Model.LatestArticle.Title" />
                        </a>
                    </figure>
                    <p class="title">
                        <a asp-page="/Article">
                            @Model.LatestArticle.Title
                        </a>
                    </p>
                    <p class="subtitle">@Model.LatestArticle.Description</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section has-background-light">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-four-fifths-desktop">
                @foreach (var article in Model.Articles[1..])
                {
                    <div class="card mb-4">
                        <div class="card-content">
                            <div class="columns is-vcentered">
                                <div class="column is-one-third">
                                    <figure class="image">
                                        <a asp-page="/Article">
                                        <img src="@article.ImageUrl" alt="@article.Title" />
                                        </a>
                                    </figure>
                                </div>
                                <div class="column">
                                    <p class="title">
                                        <a asp-page="/Article">
                                        @article.Title
                                        </a>
                                        </p>
                                    <p class="subtitle">@article.Description</p>
                                    <p>De @article.Author.Name în @article.CreatedDate.ToString(format)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
